{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Get Started') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-md-12">
            <div class="container">
                <h2 class="text-center">
                    <a href="{{ url('get-started') }}">Select source</a>
                </h2>

                <div class="well source-list">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#" data-toggle="tab">eBay</a></li>
                        <li class="disabled" data-toggle="tooltip" data-placement="top" title="Coming soon"><a>Amazon</a></li>
                        <li class="disabled"><a>...</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="ebay">
                            <div class="row">
                                <div class="col col-sm-3">
                                    <h4>Select region:</h4>
                                </div>
                                <div class="col col-sm-9">
                                    {# Button trigger modal #}
                                    <button type="button" class="btn btn-link get-region" data-target="#modal" data-title="Select region">
                                        Worldwide, USA
                                    </button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-3">
                                    <h4>Select category or subcategory:</h4>
                                </div>
                                <div class="col col-sm-9">
                                    {# Button trigger modal #}
                                    <div class="row">
                                        <div class="col col-sm-1">
                                            <button type="button" class="btn btn-flat mdi-content-add get-category" data-target="#modal" data-title="Select category or subcategory"></button>
                                        </div>
                                        <div class="col col-sm-11">
                                            <div class="category-list"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- add tabs here -->
                    </div>
                </div>

                <div class="form-place ebay-form">
                    <form action="{{ url('ebay') }}" method="post" class="form">
                        <section class="well">
                            <div class="row">
                                <div class="col col-sm-12">
                                    <div class="form-group">
                                        <label for="keyword" class="label label-primary">Keyword:</label>
                                        <input type="text" name="keyword" id="keyword" class="form-control" min="1" step="1" placeholder="Keyword">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="minPrice" class="label label-primary">Min Price:</label>
                                        <input type="number" name="minPrice" id="minPrice" class="form-control" min="1" step="1" placeholder="5">
                                    </div>
                                </div>

                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="maxPrice" class="label label-primary">Max Price:</label>
                                        <input type="number" name="maxPrice" id="maxPrice" class="form-control" min="1" step="1" placeholder="100">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label class="label label-primary" for="sortOrder">Sort Order:</label>
                                        <select name="sortOrder" id="sortOrder" class="form-control">
                                            {% for sortOrder in ebaySourceGlobal['Sort Order'] %}
                                                <option value="{{ sortOrder|replace({' ': ''}) }}">{{ sortOrder }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="col col-sm-6">
                                    <label class="label label-primary">Listing Type:</label>
                                    <div class="checkbox" id="listingType">
                                        {% for listingType in ebaySourceGlobal['Listing Type'] %}
                                            <label>
                                                <input type="checkbox" name="listingType[]" value="{{ listingType|replace({' ': ''}) }}"> <span class="check-text">{{ listingType }}</span>
                                            </label>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="entriesPerPage" class="label label-primary">Entries Per Page: </label>
                                        <select name="entriesPerPage" id="entriesPerPage" class="form-control">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="returnsPageNumbers" class="label label-primary">Returns Page Numbers: </label>
                                        <input type="number" name="returnsPageNumbers" id="returnsPageNumbers" class="form-control" min="1" step="1" value="1">
                                    </div>
                                </div>
                            </div>
                        </section>

                        <section class="well">
                            <input class="input-region" type="hidden" name="region" value="1">
                            <input class="input-category" type="hidden" name="category">
                            <input class="input-category-level" type="hidden" value="1">

                            <input type="hidden" name="token" value="{{ token }}">

                            <input type="submit" value="send" class="btn btn-primary btn-block submit-btn disabled" disabled>
                        </section>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="modalLabel">
                            {# Modal title #}
                        </h4>
                    </div>
                    <hr>
                    <div class="modal-body">
                        <div class="row">
                            {# Modal content #}
                            <div id="form-filter"></div>
                            <section class="destination"></section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
