{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Get Started') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-md-12">
            <div class="container">
                <h2 class="text-center">
                    <a href="{{ url('get-started') }}">Select source</a>
                </h2>

                <div class="well source-list">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#" data-toggle="tab">eBay</a></li>
                        <li class="disabled" data-toggle="tooltip" data-placement="top" title="Coming soon"><a>Amazon</a></li>
                        <li class="disabled"><a>...</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="ebay">
                            <!-- Regions -->
                            <label for="region-select" class="sr-only">Select Region:</label>
                            <select id="region-select" class="cs-select cs-skin-border region-select">
                                {% for dataSource in ebaySourceRegional %}
                                    <option value="{{ dataSource.getPropertySet().ebay_global_id }}">{{ dataSource.getRegion() }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <!-- add tabs here -->
                    </div>
                </div>

                <div class="form-place">
                    <form action="{{ url('ebay') }}" method="post" class="form">
                        <section class="well">
                            <div class="row">
                                <div class="col col-sm-12">
                                    <div class="form-group">
                                        <label for="sortOrder" class="label label-primary">Sort Order:</label>
                                        <select name="sortOrder" id="sortOrder" class="form-control">
                                            <!-- sort order -->
                                            {% for sortItem in ebaySourceGlobal.getFilterSet()['Sort Order'] %}
                                                <option value="{{ sortItem|replace({' ': ''}) }}">{{ sortItem }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-12">
                                    <div class="form-group">
                                        <label for="keyword" class="label label-primary">Keyword:</label>
                                        <input type="text" name="keyword" id="keyword" class="form-control" min="1" step="1" placeholder="Keyword">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="minPrice" class="label label-primary">Min Price:</label>
                                        <input type="number" name="minPrice" id="minPrice" class="form-control" min="1" step="1" placeholder="5">
                                    </div>
                                </div>

                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="maxPrice" class="label label-primary">Max Price:</label>
                                        <input type="number" name="maxPrice" id="maxPrice" class="form-control" min="1" step="1" placeholder="100">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-12">
                                    <span class="label label-primary">Listing Type:</span>
                                    <div class="checkbox" id="listingType">
                                        {% for listingType in ebaySourceGlobal.getFilterSet()['Listing Type'] %}
                                            <label>
                                                <input type="checkbox" name="listingType[]" value="{{ listingType|replace({' ': ''}) }}"> <span class="check-text">{{ listingType }}</span>
                                            </label>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="entriesPerPage" class="label label-primary">Entries Per Page: </label>
                                        <select name="entriesPerPage" id="entriesPerPage" class="form-control">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col col-sm-6">
                                    <div class="form-group">
                                        <label for="returnsPageNumbers" class="label label-primary">Returns Page Numbers: </label>
                                        <input type="number" name="returnsPageNumbers" id="returnsPageNumbers" class="form-control" min="1" step="1" value="1">
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" name="region" class="selected-item" value="">
                            <input type="hidden" name="category" class="category" value="">
                            <input type="hidden" name="token" value="{{ token }}">

                            <input type="submit" value="send" class="btn btn-primary btn-block disabled">
                        </section>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <button class="md-trigger" data-modal="modal-1">Modal</button>

    <div class="md-modal md-effect-1" id="modal-1">
        <div class="md-content">
            <h3>Modal Dialog</h3>
            <div class="md-content-inner">
                <ul class="list-unstyled">
                    {% for dataSource in ebaySourceRegional %}
                        <li data-value="{{ dataSource.getPropertySet().ebay_global_id }}">{{ dataSource.getRegion() }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <button type="button" class="close md-close" data-toggle="tooltip" data-placement="top" title="Close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

    <div class="md-overlay"></div>
{% endblock %}
