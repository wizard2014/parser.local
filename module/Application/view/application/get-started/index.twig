{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Get Started') }}{% endblock %}

{% block content %}
    <div class="theme">
        <!-- SVG Sprite -->
        <div style="height: 0; width: 0; position: absolute; visibility: hidden;" aria-hidden="true">
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" focusable="false">
                <symbol id="ripply-scott" viewBox="0 0 100 100">
                    <g>
                        <polygon points="5.6,77.4 0,29 39.1,0 83.8,19.3 89.4,67.7 50.3,96.7" />
                        <polygon fill="rgba(255,255,255,0.35)" transform="scale(0.5), translate(50, 50)" points="5.6,77.4 0,29 39.1,0 83.8,19.3 89.4,67.7 50.3,96.7" />
                        <polygon fill="rgba(255,255,255,0.25)" transform="scale(0.25), translate(145, 145)" points="5.6,77.4 0,29 39.1,0 83.8,19.3 89.4,67.7 50.3,96.7" />
                    </g>
                </symbol>
            </svg>
        </div>

        <div class="row">
            <div class="col col-md-12">
                <div class="container">
                    <h2 class="text-center">
                        <a href="{{ url('get-started') }}">Select source</a>
                    </h2>

                    <div class="well source-list">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#" data-toggle="tab">eBay</a></li>
                            <li class="disabled" data-toggle="tooltip" data-placement="top" title="Coming soon"><a>Amazon</a></li>
                            <li class="disabled"><a>...</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="ebay">
                                <!-- Regions -->
                                <label for="region-select" class="sr-only">Select Region:</label>
                                <select id="region-select" class="cs-select cs-skin-border region-select">
                                    <option value="" disabled selected>Select region...</option>
                                    {% for dataSource in ebaySourceRegional %}
                                        <option value="{{ dataSource.getPropertySet().ebay_global_id }}">{{ dataSource.getRegion() }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <!-- add tabs here -->
                        </div>
                    </div>

                    <div class="form-place">
                        <form action="{{ url('ebay') }}" method="post" class="form">
                            <section class="well">
                                <div class="row">
                                    <h4 class="base-settings">Base settings</h4>
                                    <div class="col col-sm-6">
                                        <div class="form-group">
                                            <label for="category" class="label label-primary">Category:</label>
                                            <select name="category" id="category" class="form-control category">
                                                <!-- category -->
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col col-sm-6">
                                        <div class="form-group">
                                            <label for="sortOrder" class="label label-primary">Sort Order:</label>
                                            <select name="sortOrder" id="sortOrder" class="form-control">
                                                <!-- sort order -->
                                                {% for sortItem in ebaySourceGlobal.getFilterSet()['Sort Order'] %}
                                                    <option value="{{ sortItem|replace({' ': ''}) }}">{{ sortItem }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-primary">
                                    <div class="panel-heading" role="tab" id="advanced-settings">
                                        <h4 class="panel-title advanced-settings">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Advanced Settings
                                            </a>
                                        </h4>

                                        <i class="mdi-content-add"></i>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="advanced-settings">
                                        <div class="panel-body">
                                            <div class="col col-sm-6">
                                                <div class="form-group">
                                                    <label for="category" class="label label-primary">Sub category:</label>
                                                    <select name="category" id="category" class="form-control category">
                                                        <!-- subcategory -->
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col col-sm-6">
                                                <div class="form-group">
                                                    <label for="keyword" class="label label-primary">Keyword:</label>
                                                    <input type="text" name="keyword" id="keyword" class="form-control" min="1" step="1" placeholder="Keyword">
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col col-sm-3 col-sm-offset-6">
                                                    <div class="form-group">
                                                        <label for="minPrice" class="label label-primary">Min Price: </label>
                                                        <input type="number" name="minPrice" id="minPrice" class="form-control" min="1" step="1" placeholder="5">
                                                    </div>
                                                </div>

                                                <div class="col col-sm-3">
                                                    <div class="form-group">
                                                        <label for="maxPrice" class="label label-primary">Max Price: </label>
                                                        <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="100">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col col-sm-6  col-sm-offset-6">
                                                    <span class="label label-primary">Listing Type:</span>
                                                    <div class="checkbox" id="listingType">
                                                        {% for listingType in ebaySourceGlobal.getFilterSet()['Listing Type'] %}
                                                            <label>
                                                                <input type="checkbox" name="listingType[]" value="{{ listingType|replace({' ': ''}) }}"> <span class="check-text">{{ listingType }}</span>
                                                            </label>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col col-sm-3 col-sm-offset-6">
                                                    <div class="form-group">
                                                        <label for="entriesPerPage" class="label label-primary">Entries Per Page: </label>
                                                        <select name="entriesPerPage" id="entriesPerPage" class="form-control">
                                                            <option value="10">10</option>
                                                            <option value="25">25</option>
                                                            <option value="50">50</option>
                                                            <option value="100">100</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col col-sm-3">
                                                    <div class="form-group">
                                                        <label for="returnsPageNumbers" class="label label-primary">Returns Page Numbers: </label>
                                                        <input type="number" name="returnsPageNumbers" id="returnsPageNumbers" class="form-control" min="1" step="1" value="1">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <input type="hidden" name="region" class="selected-item" value="">
                                <input type="hidden" name="token" value="{{ token }}">

                                <button type="submit" id="js-ripple-btn" class="button styl-material js-ripple-btn btn-block">
                                    Send
                                    <svg class="ripple-obj" id="js-ripple">
                                        <use width="4" height="4" xlink:href="#ripply-scott" class="js-ripple"></use>
                                    </svg>
                                </button>
                            </section>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}<script src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/TweenMax.min.js"></script>{% endblock %}
