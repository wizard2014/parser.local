{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Get Started') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col col-md-12">
            <div class="container">
                <h2 class="text-center">
                    <a href="{{ url('get-started') }}">Select source</a>
                </h2>

                <div class="well source-list">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#" data-toggle="tab">eBay</a></li>
                        <li class="disabled" data-toggle="tooltip" data-placement="top" title="Coming soon"><a>Amazon</a></li>
                        <li class="disabled"><a>...</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="ebay">
                            <div class="row">
                                <div class="col col-sm-3">
                                    <h4>Select region:</h4>
                                </div>
                                <div class="col col-sm-9">
                                    {# Button trigger modal #}
                                    <button type="button" class="btn btn-flat btn-default get-region" data-target="#modal" data-title="Select region">
                                        Worldwide, USA
                                    </button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col col-sm-3">
                                    <h4>Select category or subcategory:</h4>
                                </div>
                                <div class="col col-sm-9">
                                    {# Button trigger modal #}
                                    <div class="category-list">
                                        <button type="button" class="btn btn-flat btn-default mdi-content-add get-category" data-target="#modal" data-title="Select category or subcategory"></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- add tabs here -->
                    </div>
                </div>

                <div class="form-place">
                    <form action="{{ url('ebay') }}" method="post" class="form">
                        <section class="well">
                            <input class="input-region" type="hidden" name="region" value="1">
                            <input class="input-category" data-level="1" type="hidden" name="category" value="">

                            <input type="hidden" name="token" value="{{ token }}">

                            <input type="submit" value="send" class="btn btn-primary btn-block disabled">
                        </section>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="modalLabel">
                            {# Modal title #}
                        </h4>
                    </div>
                    <hr>
                    <div class="modal-body">
                        <div class="row">
                            {# Modal content #}
                            <section class="destination"></section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
