{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Settings') }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col col-sm-12">
                <h2>Profile</h2>
            </div>
        </div>

        <div class="row">
            <div class="col col-sm-2">
                <h4>Account</h4>
                <p><a href="{{ url('settings/default', {'action': 'subscription'}) }}">Subscription</a></p>
                <p><a href="{{ url('settings/default', {'action': 'statistics'}) }}">Statistics</a></p>

                <h4>User</h4>
                <p><a href="{{ url('settings/default', {'action': 'profile'}) }}">Profile</a></p>
                <p><a href="{{ url('settings/default', {'action': 'notification'}) }}">Notifications</a></p>
            </div>

            <div class="col col-sm-10">
                <div class="row settings-content">
                    <div class="col col-sm-2">
                        <div class="gravatar">
                            <img src="https://secure.gravatar.com/avatar/{{ zfcUserIdentity().getEmail()|md5 }}?default=identicon&secure=true&size=80" alt="{{ zfcUserIdentity().getEmail() }}">
                        </div>
                    </div>

                    <div class="col col-sm-10">
                        <h3><i class="fa fa-user"></i> <strong>{{ zfcUserDisplayName() }}</strong></h3>
                        {# user info #}
                        <p><i class="fa fa-envelope"></i> <a href="{{ url('zfcuser/changeemail') }}">{{ zfcUserIdentity().getEmail() }}</a></p>
                        <p><i class="fa fa-clock-o"></i> Member since {{ memberSince|date('M d, Y') }}</p>

                        {% if subType != 'Free' %}
                            <p><i class="fa fa-bar-chart"></i> Subscription type {{ subType }}</p>
                            <p><i class="fa fa-battery-half"></i> Subscription status {{ subStatus }}</p>
                        {% else %}
                            <p><i class="fa fa-bar-chart"></i> Subscription type <a href="{{ url('settings/default', {'action': 'subscription'}) }}">{{ subType }}</a></p>
                        {% endif %}

                        <p><i class="fa fa-key"></i> <a href="{{ url('zfcuser/changepassword') }}">Change password</a></p>
                        <p><button type="button" class="btn btn-material-deep-orange key-form-toggle">Add/Edit Key</button></p>

                        <div class="api-key-form hide">
                            <form action="#" method="post" class="form-inline ebay-api-key-form">
                                <div class="form-group form-group-material-blue-grey">
                                    <label for="ebay-key-input"></label>
                                    <input id="ebay-key-input" type="text" class="form-control" placeholder="Ebay AppID">
                                </div>

                                <input type="hidden" name="token" value="">
                                <button type="submit" class="btn btn-material-deep-orange keys"><i class="fa fa-floppy-o"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}