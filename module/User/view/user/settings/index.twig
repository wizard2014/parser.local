{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Settings') }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col col-sm-12">
                <h2>Settings</h2>
            </div>
        </div>

        <div class="row">
            <div class="col col-sm-2">
                <h4>Account</h4>

                <h4>User</h4>
            </div>

            <div class="col col-sm-10">
                <div class="row">
                    <div class="col col-sm-2">
                        <div class="gravatar">
                            {{ gravatar(zfcUserIdentity().getEmail())|raw }}
                        </div>
                    </div>

                    <div class="col col-sm-10">
                        <h3><strong>{{ zfcUserDisplayName() }}</strong></h3>
                        {# user info #}
                        <p>{{ zfcUserIdentity().getEmail() }}</p>
                        <p>Member since {{ 'date' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}