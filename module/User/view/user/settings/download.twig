{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Downloads') }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col col-sm-12">
                <h2>Statistics</h2>
            </div>
        </div>

        <div class="row">
            <div class="col col-sm-2">
                {% include 'user/settings/partial/sidebar.twig' %}
            </div>

            <div class="col col-sm-10">
                <div class="row">
                    <div class="alert alert-dismissable alert-danger{{ flashMessages|length ? '' : ' hide' }}">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <h3 class="error-header">Oops... Error!</h3>

                        <ul class="list-unstyled error-list">
                            {% for msg in flashMessages %}
                                <li>{{ msg }}</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <section class="downloads">
                        {% for vaendor, files in userFiles  %}
                            <h3>{{ vaendor }}</h3>

                            {% for file in files %}
                                <p class="{{ file.downloaded ? 'downloaded' : 'not-downloaded' }}">
                                    <a href="{{ url('settings/default',
                                                {'action': 'get-file'},
                                                {'query': {'file': file.path ~ '/' ~ file.filename}}) }}">
                                        {{ file.date }}
                                    </a>
                                </p>
                            {% endfor %}
                        {% else %}
                            <h3>No files yet.</h3>
                        {% endfor %}
                    </section>
                </div>
            </div>
        </div>
    </div>
{% endblock %}