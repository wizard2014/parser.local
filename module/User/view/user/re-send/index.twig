{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Re-send email') }}{% endblock %}

{% block content %}
    <div class="row">
        <h2 class="text-center">Resend email</h2>

        <div class="col col-sm-2 col-sm-offset-5 col-xs-10 col-xs-offset-1">
            <form action="{{ url('resend') }}" method="post" role="form">
                <div class="form-group">
                    <label for="email" class="sr-only">Enter email</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="Enter email">
                </div>
                <input class="form-control" type="hidden" name="token" value="{{ token }}">
                <input class="btn btn-primary btn-block" type="submit" value="Send">
            </form>
        </div>
    </div>
{% endblock %}