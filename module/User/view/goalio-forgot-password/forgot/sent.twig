{% extends 'layout/layout.twig' %}

{% block title %}{{ translate('Forgot your password?') }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col col-sm-6 col-sm-offset-3">
                <h1>{{ translate('Forgot your password?') }}</h1>

                <p>{{ translate('A reminder has been sent to your e-mail address %s.')|format(email)|e }}</p>

                <a href="{{ url('zfcuser/login') }}">{{ translate('Back to login') }}</a>
            </div>
        </div>
    </div>
{% endblock %}
